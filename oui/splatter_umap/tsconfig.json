{
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.scss"
    ],
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "outDir": "public",
        "allowJs": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "experimentalDecorators": true
    }
}