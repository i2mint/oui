{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": ["dom", "es2015", "es6"],
        "allowJs": true,
        "declaration": true,
        "diagnostics": true,
        "sourceMap": true,
        "removeComments": true,
        "jsx": "react",
        "rootDir": "./oui",
        "experimentalDecorators": true,
        "outDir": "./lib",
        "noUnusedLocals": true,
        "typeRoots" : ["./node_modules/@types", "./typings"],
    },
    "include": [ "oui/**/*.ts*" ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}